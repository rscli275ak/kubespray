config.vm.define "kdeploykub" do |control|
          control.vm.hostname = "kdeploykub"
          control.vm.network "private_network", ip: "192.168.7.120"
          control.vm.provider "virtualbox" do |v|
            v.customize [ "modifyvm", :id, "--cpus", "1" ]
            v.customize [ "modifyvm", :id, "--memory", "512" ]
            v.customize ["modifyvm", :id, "--natdnshostresolver1", "on"]
            v.customize ["modifyvm", :id, "--natdnsproxy1", "on"]
            v.customize ["modifyvm", :id, "--name", "kdeploykub"]
            v.customize ["modifyvm", :id, "--audio", "none"]
          end
          config.vm.provision :shell, :inline => common
      end
      config.vm.define "kmaster01" do |node1|
          node1.vm.hostname = "kmaster01"
          node1.vm.network "private_network", ip: "192.168.7.121"
          node1.vm.provider "virtualbox" do |v|
              v.customize [ "modifyvm", :id, "--cpus", "1" ]
              v.customize [ "modifyvm", :id, "--memory", "2048" ]
              v.customize ["modifyvm", :id, "--natdnshostresolver1", "on"]
              v.customize ["modifyvm", :id, "--natdnsproxy1", "on"]
              v.customize ["modifyvm", :id, "--name", "kmaster01"]
              v.customize ["modifyvm", :id, "--audio", "none"]
          end
          config.vm.provision :shell, :inline => common
      end
